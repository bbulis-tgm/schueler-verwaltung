<html>
<head>
    <!-- Einbinden von allen Imports
     Eigenes File -->
    <% include partials/head.ejs %>
</head>
<body>
<!-- Einbinden der Navbar
 Eigenes File
 Navbar wird von EJS in einer Output-HTML gerendert -->
<% include partials/nav.ejs %>
<div class="container">
    <h1>Schülerverwaltung</h1>
    <br><br>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Vorname</th>
            <th scope="col">Nachname</th>
            <th scope="col">Klasse</th>
            <th scope="col">Ausbildungszweig</th>
        </tr>
        </thead>
        <tbody>
            <!-- List der Schüler wird durchiteriert -->
            <% schueler.forEach(function (schueler) { %>
                <tr>
                    <!-- Einzelne Informationen können aus dem Objekt geholt werden -->
                    <td><%= schueler.vorname %></td>
                    <td><%= schueler.nachname %></td>
                    <td><%= schueler.klasse %></td>
                    <td><%= schueler.zweig %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<br><br><br><br>
<div class="row justify-content-md-center">
    <div class="col-4">
        <!-- Wird ein Schüler zur Datenbank hinzugefügt so wird ein POST Request an den Endpoint /schueler geschickt -->
        <form method="POST" action="/schueler">
            <div class="from-group">
                <label for="vorname">Vorname</label>
                <input type="text" class="form-control" id="vorname" name="vorname" placeholder="Vorname">
            </div>
            <br>
            <div class="from-group">
                <label for="nachname">Nachname</label>
                <input type="text" class="form-control" id="nachname" name="nachname" placeholder="Nachname">
            </div>
            <br>
            <div class="from-group">
                <label for="klasse">Klasse</label>
                <input type="text" class="form-control" id="klasse" name="klasse" placeholder="Klasse">
            </div>
            <br>
            <div class="from-group">
                <label for="zweig">Ausbildungszweig</label>
                <select class="form-control" id="zweig" name="zweig">
                    <option>MEDT</option>
                    <option>SYT</option>
                    <option>Neutral</option>
                </select>
            </div><br>
            <button type="submit" class="btn btn-primary">Hinzufügen</button>
        </form>
    </div>
</div>
<br><br><br><br>
<div class="row justify-content-md-center">
    <div class="col-4">
        <!-- Wird ein Schüler gelöscht wird ein POST Request an den Endpoint /schueler/delete geschickt -->
        <form method="POST" action="/schueler/delete">
            <div class="from-group">
                <label for="vorname">Vorname</label>
                <input type="text" class="form-control" id="vorname" name="vorname" placeholder="Vorname">
            </div>
            <br>
            <div class="from-group">
                <label for="nachname">Nachname</label>
                <input type="text" class="form-control" id="nachname" name="nachname" placeholder="Nachname">
            </div>
            <br>
            <div class="from-group">
                <label for="klasse">Klasse</label>
                <input type="text" class="form-control" id="klasse" name="klasse" placeholder="Klasse">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Löschen</button>
        </form>
    </div>
</div>
<!-- JavaScript Import werden am Ende des Bodys eingebunden -->
<% include partials/footer.ejs %>
</body>
</html>